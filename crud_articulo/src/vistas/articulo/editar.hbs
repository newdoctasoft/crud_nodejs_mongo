<body>
<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3>EDITAR TAREA</h3>
    </div>
    <div class="card-body">
      <form action="/articulo/editar/{{articulo._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
           <label for="titulo">NOMBRE</label>
          <input type="text" name="titulo" class="form-control" value="{{articulo.nombre}}"/><br/>
        </div>
        <div class="form-group">
          <label for="titulo">DESCRIPCION</label>
          <textarea name="descripcion" class="form-control">{{articulo.descripcion}}</textarea><br/>
        </div>
        <div class="form-group">
          <label for="titulo">CATEGORIA</label>
          <input type="text" name="categoria" class="form-control" value="{{articulo.categoria}}"/><br/>
        </div>
        <div class="form-group">
          <label for="titulo">MATERIAL</label>
          <input type="text" name="material" class="form-control" value="{{articulo.material}}"/><br/>
        </div>
        <div class="form-group">
          <label for="titulo">PRECIO</label>
          <input type="number" name="precio" class="form-control" value="{{articulo.precio}}"/><br/>
        </div>
        <div class="form-group">
           <label for="titulo">STOCK</label>
          <input type="number" name="stock" class="form-control" value="{{articulo.stock}}"/><br/>
        </div> 
     <input type="text" placeholder="ingrese la imagen" name="imagen" class="form-control" value="{{articulo.imagen}}"/><br/>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            EDITAR
          </button>
        </div>
      </form>
    </div>
  </div>
</div>



</body>

</html>
